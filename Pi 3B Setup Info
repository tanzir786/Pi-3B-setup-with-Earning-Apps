8.3 ‡¶∏‡ßç‡¶¨‡ßü‡¶Ç‡¶ï‡ßç‡¶∞‡¶ø‡ßü ‡¶¨‡ßç‡¶Ø‡¶æ‡¶ï‡¶Ü‡¶™
bash
# Backup directory ‡¶§‡ßà‡¶∞‡¶ø
mkdir -p ~/backups/docker-compose

# Backup script
sudo nano /usr/local/bin/backup-services
bash
#!/bin/bash
BACKUP_DIR="/home/pi/backups"
DATE=$(date +%Y%m%d_%H%M%S)

# Docker-compose files backup
tar -czf "$BACKUP_DIR/docker-compose/docker-backup-$DATE.tar.gz" \
    /home/pi/docker/*/docker-compose.yml \
    /home/pi/docker/*/.env 2>/dev/null

# Keep only last 7 backups
find "$BACKUP_DIR/docker-compose" -name "*.tar.gz" -mtime +7 -delete

echo "Backup completed: docker-backup-$DATE.tar.gz"
bash
sudo chmod +x /usr/local/bin/backup-services

# Weekly backup to crontab
(crontab -l 2>/dev/null; echo "0 2 * * 0 /usr/local/bin/backup-services") | crontab -
