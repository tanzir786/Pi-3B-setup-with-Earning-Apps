echo "6. Network Configuration:"; docker network ls
‡¶∏‡ßç‡¶¨‡ßü‡¶Ç‡¶ï‡ßç‡¶∞‡¶ø‡ßü ‡¶∏‡ßç‡¶ï‡ßç‡¶∞‡¶ø‡¶™‡ßç‡¶ü:
bash
# All-in-one check script
nano ~/check-all-services.sh
bash
#!/bin/bash
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m'

check_service() {
    if systemctl is-active --quiet $1; then
        echo -e "${GREEN}‚úì${NC} $1: Running"
    else
        echo -e "${RED}‚úó${NC} $1: Not running"
    fi
}

check_container() {
    if docker ps --format "{{.Names}}" | grep -q $1; then
        echo -e "${GREEN}‚úì${NC} Container $1: Running"
    else
        echo -e "${RED}‚úó${NC} Container $1: Not running"
    fi
}

echo "=== Service Status ==="
check_service docker
check_service earnapp

echo ""
echo "=== Container Status ==="
check_container pihole
check_container honeygain

echo ""
echo "=== System Health ==="
vcgencmd measure_temp
free -h | awk 'NR==2{printf "Memory: %s/%s (%.2f%%)\n", $3,$2,$3*100/$2 }'
df -h / | awk 'NR==2{printf "Disk: %s/%s (%s)\n", $3,$2,$5}'
bash
chmod +x ~/check-all-services.sh
